{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "depTypeList": ["devDependencies", "dependencies", "peerDependencies", "resolutions"],
      "updateTypes": ["patch", "minor"],
      "groupName": "dependencies (non-major)"
    },
    {
      "description": "node: prefixes are no longer working due to https://github.com/DefinitelyTyped/DefinitelyTyped/pull/52595",
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "!/(14\\.14\\.44|14\\.14\\.45|14\\.17\\.0|14\\.17\\.1|14\\.17\\.2|14\\.17\\.3|14\\.17\\.4|15\\.0\\.2|15\\.0\\.3|15\\.3\\.0|15\\.3\\.1|15\\.6\\.0|15\\.6\\.1|15\\.6\\.2|15\\.9\\.0|15\\.12\\.0|15\\.12\\.1|15\\.12\\.2|15\\.12\\.3|15\\.12\\.4)/"
    },
    {
      "description": "Enable major version upgrades of @types/node https://github.com/renovatebot/renovate/issues/1463#issuecomment-874988286",
      "matchPackageNames": [
        "@types/node"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true
    }
  ],
  "schedule": "after 4pm on thursday",
  "vulnerabilityAlerts": {
    "schedule": null
  }
}
